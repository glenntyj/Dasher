@model dynamic

@{
    var count = 1;
}

@if (TempData["Msg"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Msg"]
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">     
        <h6 class="m-0 font-weight-bold text-primary">RESULTS</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Retailer</th>
                        <th>Category</th>
                        <th>Sub-Category</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var market in Model.Supermarket)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@market.Retailer</td>
                            <td>@market.Category</td>
                            <td>@market.SubCategory</td>
                            <td>
                                <a href="@market.Url" target="_blank">VISIT</a>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
                @if (count > 10)
                {
                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Retailer</th>
                            <th>Category</th>
                            <th>SubCategory</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</div>